// Logical operators (&&, ||, !) are not yet implemented in firescript
// This test covers boolean operations that ARE supported

import @firescript/std.io.{println};

println("=== Boolean Operations ===");

// Boolean basics
println("--- Boolean Basics ---");
bool t = true;
bool f = false;

println(t);  // true
println(f);  // false
println(t == true);  // true
println(f == false);  // true
println(t == f);  // false

// Conditional logic using if statements
println("--- Conditional Logic ---");
int32 a = 10;
int32 b = 5;
int32 c = 15;

// Simulate AND: both conditions must be true
if (a > b) {
    if (a < c) {
        println("a is between b and c");
    }
}

// Simulate OR using boolean flag
bool condition_met = false;
if (a < b) {
    condition_met = true;
}
if (a > 0) {
    condition_met = true;
}
if (condition_met == true) {
    println("a meets at least one condition");
}

println("=== Boolean operation tests passed ===");
