// Test custom type constraint aliases

import @firescript/std.io.{println};

// Define some constraint aliases
constraint NumericPrimitive = int32 | int64 | float32 | float64;
constraint SignedInteger = int8 | int16 | int32 | int64;

// Use the constraint alias in a generic function
T add<T: NumericPrimitive>(T a, T b) {
    return a + b;
}

T abs<T: SignedInteger>(T x, T zero) {
    if (x < zero) {
        return -x;
    }
    return x;
}

// Test with NumericPrimitive constraint
int32 sum1 = add(10i32, 20i32);
int64 sum2 = add(100i64, 200i64);
float32 sum3 = add(1.5f32, 2.5f32);
float64 sum4 = add(3.14f64, 2.71f64);

println(sum1);  // 30
println(sum2);  // 300
println(sum3);  // 4.0
println(sum4);  // 5.85

// Test with SignedInteger constraint
int32 abs1 = abs(-42i32, 0i32);
int64 abs2 = abs(-999i64, 0i64);

println(abs1);  // 42
println(abs2);  // 999

return 0;