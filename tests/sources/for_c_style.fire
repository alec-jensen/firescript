// Test C-style for loops

import @firescript/std.io.{println};

// Basic for loop
for (int32 i = 0; i < 5; i++) {
    println(i);
}

// For loop with variable declaration before loop
int32 sum = 0;
for (int32 i = 1; i <= 10; i++) {
    sum = sum + i;
}
println(sum);

// Nested for loops
for (int32 i = 0; i < 3; i++) {
    for (int32 j = 0; j < 3; j++) {
        println(i * 3 + j);
    }
}

// For loop with empty init
int32 k = 0;
for (; k < 3; k++) {
    println(k);
}

// For loop with break
for (int32 i = 0; i < 10; i++) {
    if (i == 5) {
        break;
    }
    println(i);
}

// For loop with continue
for (int32 i = 0; i < 5; i++) {
    if (i == 2) {
        continue;
    }
    println(i);
}

return 0;
