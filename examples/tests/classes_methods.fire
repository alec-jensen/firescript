// Constructors and instance methods test

import @firescript/std.io.{println};

class Point {
    int32 x;
    int32 y;

    // Constructor named same as class
    Point(&this, int32 x, int32 y) {
        this.x = x;
        this.y = y;
    }
    int32 sum(&this) {
        return this.x + this.y;
    }
}

Point p = new Point(2, 3);
println(p.sum());
